@model ProductVM

<form method="post" class="row" enctype="multipart/form-data">
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr />

        </div>
        <div class="mb-3">
            <label asp-for="Product.Title"></label>
            <input asp-for="Product.Title" />
            <span asp-validation-for="Product.Title" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Product.Description"></label>
            <input asp-for="Product.Description" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>

        </div>

        <div class="mb-3 form-label">
            <label asp-for="Product.Author"></label>
            <input asp-for="Product.Author" />
            <span asp-validation-for="Product.Author" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Product.ISBN"></label>
            <input asp-for="Product.ISBN" />
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Product.ListPrice"></label>
            <input asp-for="Product.ListPrice" />
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Product.Price"></label>
            <input asp-for="Product.Price" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Product.Price50"></label>
            <input asp-for="Product.Price50" />
            <span asp-validation-for="Product.Price50" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Product.Price100"></label>
            <input asp-for="Product.Price100" />
            <span asp-validation-for="Product.Price100" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="@Model.Product.CategoryId"></label>
            <select asp-for="@Model.Product.CategoryId" class="form-select" asp-items="@Model.CategoryList"><option disabled selected>Select category</option></select>
            <span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Product.ImageUrl"></label>
            <input type="file" name="file" />

        </div>
        <div class="row">
            <div class="col-3 form-control">  <button type="submit" class="btn btn-primary">Create</button></div>
            <div class="col-3 form-control">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>

        </div>

    </div>



</form>


